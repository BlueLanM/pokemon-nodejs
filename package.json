{
  "name": "pokemon-nodejs",
  "version": "1.0.0",
  "type": "module",
  "description": "Pokemon project with Node.js backend and React frontend",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd frontend && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../frontend && npm install",
    "postinstall": "node scripts/fix-database.js || true",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "fix-db": "node scripts/fix-database.js",
    "reset-pwd": "node scripts/reset-password.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "all": "^0.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.5"
  }
}
