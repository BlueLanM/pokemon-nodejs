# EditorConfig 配置文件
# https://editorconfig.org

# 顶级配置文件
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript/JSX/TSX 文件
[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 4
tab_width = 4

# JSON 文件
[*.json]
indent_style = tab
indent_size = 4

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# YAML 文件（通常使用空格）
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# HTML 文件
[*.html]
indent_style = tab
indent_size = 4

# CSS/SCSS 文件
[*.{css,scss,sass}]
indent_style = tab
indent_size = 4
